{
  "name": "@loom/shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for Loom multi-agent infrastructure",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./nats": {
      "types": "./dist/nats/index.d.ts",
      "import": "./dist/nats/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "nats": "^2.28.0",
    "nats.ws": "^1.30.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}
